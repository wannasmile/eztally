<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.google.eztally.android"
      android:versionName="0.5.2" android:versionCode="3">
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".TalliesActivity" 
                  android:label="@string/tallies_activity_title"
                  android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".TallyActivity"
                  android:label="@string/tally_activity_title"
                  />
        
        <activity android:name=".ReportActivity"
                  android:label="@string/report_activity_title"
                  />
        
        <activity android:name=".LoginActivity"
                  android:label="@string/login_activity_title"
                  />
        
        <activity android:name=".SettingActivity"
                  android:label="@string/setting_activity_title"
                  />
        
        <activity android:name="org.achartengine.GraphicalActivity" 
                  android:label="@string/report_chart_activity_title"
                  />
    </application>

    <uses-sdk android:minSdkVersion="3" />
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    

</manifest> 